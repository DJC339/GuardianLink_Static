{% macro gradientSearchHeader(eyebrow, title, description, formId, inputId, placeholder) %}
  <div class="rounded-2xl bg-gradient-to-br from-brand-900 to-brand-700 text-white shadow-lg p-6 sm:p-8 space-y-4">
    <div class="flex flex-col gap-2">
      {% if eyebrow %}
        <p class="text-xs font-semibold uppercase tracking-[0.35em] text-accent">{{ eyebrow }}</p>
      {% endif %}
      <h1 class="text-2xl font-bold">{{ title }}</h1>
      {% if description %}
        <p class="text-white/80 text-sm sm:text-base max-w-2xl">{{ description }}</p>
      {% endif %}
    </div>
    <div class="search-card bg-white text-slate-900">
      <form id="{{ formId }}" class="flex flex-col sm:flex-row gap-3" role="search">
        <label for="{{ inputId }}" class="sr-only">{{ title }} search</label>
        <input
          id="{{ inputId }}"
          name="q"
          type="search"
          placeholder="{{ placeholder }}"
          class="w-full rounded-lg border border-slate-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-brand-600"
        >
        <button class="btn-primary w-full sm:w-auto" type="submit">Search</button>
      </form>
    </div>
  </div>
{% endmacro %}
