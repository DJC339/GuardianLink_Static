{
  "name": "11ty-modular-template",
  "version": "0.1.0",
  "private": true,
  "description": "Modular Eleventy starter with layouts, components, and assets.",
  "scripts": {
    "start": "npm run dev",
    "dev": "concurrently \"npm:dev:eleventy\" \"npm:dev:css\"",
    "dev:eleventy": "eleventy --serve",
    "dev:css": "tailwindcss -i ./src/assets/css/tailwind.css -o ./src/assets/css/main.css --watch",
    "build": "npm run build:css && eleventy",
    "build:css": "tailwindcss -i ./src/assets/css/tailwind.css -o ./src/assets/css/main.css --minify"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-img": "^3.0.1",
    "@tailwindcss/typography": "0.5.19",
    "autoprefixer": "10.4.22",
    "concurrently": "9.2.1",
    "postcss": "8.5.6",
    "tailwindcss": "4.1.17"
  }
}
